@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "Index";

}
<div>
    <h1 class="alert-success">@TempData["Message"]</h1>
    <h1 class="alert-success">@TempData["Message2"]</h1>
    <div class="mb-2">
        <a class="btn btn-primary mt-3" asp-action="Create">Add New Role</a>
    </div>
