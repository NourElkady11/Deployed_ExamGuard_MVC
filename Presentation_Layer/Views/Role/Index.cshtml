        <form method="get" class="row" asp-action="Index">
            <div class="col-10"><input placeholder="Employee Name" type="text" class="form-control" name="searchValue" required></input></div>
            <div class="col-2"><button class="btn btn-info" type="submit" value="search">Search</button></div>
        </form>

    </div> *@
</div>
@if (Model.Any())
{
    <h1>All Roles</h1>
    <table class="table table-striped table-hover ">
        <thead>
            <tr>
              @*   <td>@Html.DisplayNameFor(d=>d.Id)</td> *@
                <td>@Html.DisplayNameFor(d => d.Name)</td>
                <td>Edit</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                  @*   <td>@item.Id</td> *@
                    <td>@item.Name</td>
           
                   @*  <partial name="Buttons_partial" model="item.Id.ToString()"></partial> *@

                    <td><a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success"><i class="fas fa-edit"></i>Edit</a></td>
                    <td><a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="fas fa-trash"></i>Delete</a></td>

                   
                </tr>

            }

        </tbody>


    </table>
}
else
{
    <div class="mt-3 alert-warining">
        <h2 class="bg-warning">No Roles yet</h2>
    </div>
}




