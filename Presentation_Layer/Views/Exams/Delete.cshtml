@model DataAccess_Layer.Models.Exam

@{
    ViewData["Title"] = "Delete Exam";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-md-8 offset-md-2">
            <h2 class="text-danger">Delete Exam</h2>
            <div class="card">
                <div class="card-body">
                    <h4 class="mb-3">Are you sure you want to delete this exam?</h4>
                    <div class="alert alert-warning">
                        <p>Deleting this exam will permanently remove all associated questions , choices and reports.</p>
                    </div>

                    <div class="mb-3">
                        <dl class="row">
                            <dt class="col-sm-3">Subject</dt>
                            <dd class="col-sm-9">@Model.Subject</dd>

                            <dt class="col-sm-3">Code</dt>
                            <dd class="col-sm-9">@Model.Code</dd>

                            <dt class="col-sm-3">Course</dt>
                            <dd class="col-sm-9">@(Model.Course?.Name ?? "Not Assigned")</dd>

                            <dt class="col-sm-3">Date</dt>
                            <dd class="col-sm-9">@Model.Date.ToString("yyyy-MM-dd")</dd>

                            <dt class="col-sm-3">Duration</dt>
                            <dd class="col-sm-9">@Model.Duration.ToString() minutes</dd>

                            <dt class="col-sm-3">Total Grade</dt>
                            <dd class="col-sm-9">@Model.TotalGrade</dd>

                            <dt class="col-sm-3">Questions</dt>
                            <dd class="col-sm-9">@(Model.Questions?.Count ?? 0)</dd>
                        </dl>
                    </div>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-controller="Course" asp-action="Index" class="btn btn-secondary me-md-2">Cancel</a>
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>