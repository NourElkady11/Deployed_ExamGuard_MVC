@model IEnumerable<DataAccess_Layer.Models.Exam>

@{
    ViewData["Title"] = "Exams";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Exams List</h2>
        </div>
    </div>

    <br />
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Subject</th>
                    <th>Code</th>
                    <th>Date</th>
                    <th>Duration</th>
                    <th>Course</th>
                    <th>Total Grade</th>
                    <th>Questions Count</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var exam in Model)
                {
                    <tr>
                        <td>@exam.Subject</td>
                        <td>@exam.Code</td>
                        <td>@exam.Date.ToString("yyyy-MM-dd")</td>
                        <td>@exam.Duration.ToString() minutes</td>
                        <td>@(exam.Course?.Name ?? "Not Assigned")</td>
                        <td>@exam.TotalGrade</td>
                        <td>@(exam.Questions?.Count ?? 0)</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-controller="Exams" asp-action="Edit" asp-route-id="@exam.Id" class="btn btn-primary mx-1">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-controller="Exams" asp-action="Delete" asp-route-id="@exam.Id" class="btn btn-danger mx-1">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No exams found.</p>
    }
</div>