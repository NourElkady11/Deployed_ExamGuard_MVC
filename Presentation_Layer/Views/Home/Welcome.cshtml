@{
    ViewData["Title"] = "Welcome";
    Layout = null;
}
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<div class="welcome-container mt-0" style="position: relative; width: 100%; height: 100vh; overflow: hidden;">
    <!-- Fullscreen Background Image -->
    <img src="~/Files/Images/Cheating-in-Exams.jpg" alt="Cheating in Exams"
         style="width: 100%; height: 100%; object-fit: cover; filter: brightness(70%);" />

    <!-- Welcome Text Overlay -->
    <div class="welcome-text" style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); text-align: center; color: white;">
        <h1 style="font-size: 4rem; font-weight: bold; text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.7);">
            Welcome to <span style="color: #ffcc00;">ExamGuard</span>
        </h1>
        <p style="font-size: 1.5rem; margin-top: 20px; text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.6);">
            Your ultimate solution for monitoring and managing academic integrity.
        </p>
        <a asp-action="Login" asp-controller="Account" class="btn btn-primary btn-lg" style="margin-top: 30px; padding: 15px 30px; font-size: 1.2rem;">
            Get Started
        </a>
     
    </div>
</div>
