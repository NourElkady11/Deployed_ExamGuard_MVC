@{
    ViewData["Title"] = "Exam Complete";
}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-body text-center">
                    <h1 class="display-4 text-success mb-4">
                        <i class="bi bi-check-circle-fill"></i>
                    </h1>
                    <h2 class="card-title">Exam Completed!</h2>
                    <p class="card-text lead">
                        Your exam has been submitted successfully.
                        Your instructor will review your answers and publish the results soon.
                    </p>
                    <div class="mt-4">
                        <a asp-action="Index" asp-controller="Home" class="btn btn-primary">Return to Home</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>