@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{
    var userEmail = HttpContextAccessor.HttpContext?.Session.GetString("UserEmail") ?? "No Email Available";
    var userImage = HttpContextAccessor.HttpContext?.Session.GetString("UserImage") ?? "/default-profile.png";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Profile - ExamGuard</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="container mt-5">
        <div class="card shadow-lg">
            <div class="card-body text-center">
                <!-- Profile Image -->
                <img src="@Url.Content("~/Files/Images/" + userImage)" class="img-fluid rounded-circle mb-3" width="200" height="200" alt="Profile Image">

                <!-- User Information -->
                <h3 class="fw-bold">@userEmail</h3>

                <p class="text-muted">This is your profile page. You can view your details here.</p>

                <a href="@Url.Action("EditProfile", "Account")" class="btn btn-primary">Edit Profile</a>
                <a href="@Url.Action("SignOut", "Account")" class="btn btn-danger">Sign Out</a>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
