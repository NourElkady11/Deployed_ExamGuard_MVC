@model IEnumerable<ExamViewModel>
@{
    ViewData["Title"] = "Exams";
}

<head>
    <link rel="stylesheet" href="~/css/GetStudentExamss.css" asp-append-version="true" />
</head>

<div class="home-container">
    <main class="dashboard">
        <h2>Your Exams</h2>
        <div class="exam-list">
            @foreach (var exam in Model)
            {
                <div class="exam-item">
                    <h3>@exam.Subject</h3>
                    <p><strong>Subject:</strong> @exam.Subject</p>
                    <p><strong>Duration:</strong> @exam.Duration minutes</p>
                    <p><strong>Start Time:</strong> @exam.StartTime.ToString("f")</p>

                    @if (exam.Status == "upcoming")
                    {
                        <a href="@Url.Action("GoToExam", "Student", new { examId = exam.Id })"
                           class="btn btn-primary">
                            Start Exam
                        </a>
                    }
                    else
                    {
                        <button class="btn btn-secondary" disabled>View Results</button>
                    }
                </div>
            }
        </div>
    </main>
</div>


