@model IEnumerable<ExamViewModel>
@{
    ViewData["Title"] = "Exams";
}

<div class="home-container">
    <!-- Header -->
    <header class="header">
        <div class="header-content">
            <h1>ExamGuard Platform</h1>
            <div class="user-info">
                <span>Welcome ya 7ag @User.FindFirst(System.Security.Claims.ClaimTypes.Name)?.Value!</span>
            </div>
        </div>
    </header>
    <!-- Main Content -->
    <main class="dashboard">
        <h2>Your Exams</h2>
        <div class="exam-list">
            @foreach (var exam in Model)
            {
                <div class="exam-item">
                    <h3>@exam.Title</h3>
                    <p><strong>Subject:</strong> @exam.Subject</p>
                    <p><strong>Duration:</strong> @exam.Duration minutes</p>
                    <p><strong>Start Time:</strong> @exam.StartTime.ToString("f")</p>
                    <button class="btn @(exam.Status == "upcoming" ? "btn-primary" : "btn-secondary")"
                    @(exam.Status == "completed" ? "disabled" : "")
                            onclick="startExam(@exam.Id)">
                        @(exam.Status == "upcoming" ? "Start Exam" : "View Results")
                    </button>
                </div>
            }
        </div>
    </main>
</div>

<script>
    function startExam(examId) {
        fetch(`/Student/StartExam/${examId}`, {
            method: "POST",
            headers: {
                "Content-Type": "application/json",
            },
        })
            .then(response => {
                if (response.ok) {
                    alert("Exam started successfully!");
                } else {
                    alert("Failed to start the exam.");
                }
            })
            .catch(error => alert("Error: " + error));
    }
</script>

<style>
    .home-container {
        padding: 20px;
    }

    .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background: #2575fc;
        color: white;
        padding: 10px 20px;
    }

    .dashboard {
        margin-top: 20px;
    }

    .exam-list {
        display: grid;
        gap: 20px;
    }

    .exam-item {
        background: #f9f9f9;
        padding: 15px;
        border-radius: 5px;
        border: 1px solid #ddd;
    }

    .btn {
        padding: 10px 15px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

    .btn-primary {
        background-color: #2575fc;
        color: white;
    }

        .btn-primary:hover {
            background-color: #1b63e0;
        }

    .btn-secondary {
        background-color: #ccc;
        color: #666;
    }

        .btn-secondary[disabled] {
            cursor: not-allowed;
        }
</style>
