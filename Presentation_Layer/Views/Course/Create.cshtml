@model CourseViewModel
@{
    ViewData["Title"] = "Create Course";
}

<h1>Create New Course</h1>

<hr />
<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4>Course Details</h4>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group mb-3">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Code" class="control-label"></label>
                        <input asp-for="Code" class="form-control" />
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="SuperVisorId" class="control-label">Supervisor</label>
                        <select asp-for="SuperVisorId" asp-items="Model.Supervisors" class="form-control">
                            <option value="">-- Select Supervisor --</option>
                        </select>
                        <span asp-validation-for="SuperVisorId" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-4">
                        <input type="submit" value="Create" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h4>Course Creation Guide</h4>
            </div>
            <div class="card-body">
                <p>To create a new course:</p>
                <ol>
                    <li>Enter a descriptive <strong>name</strong> for the course</li>
                    <li>Assign a unique <strong>Course Code</strong> Thats begins with CS</li>
                    <li>Select a <strong>supervisor</strong> who will be responsible for the course</li>
                </ol>
                <p>After creating the course, you'll be able to add exams to it.</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}